{
    "tasks": [
        {
            //"type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g", // Habilitar información de depuración
                "-std=c++11", // Opcional: ajusta según tu versión de C++
                "-I${workspaceFolder}/src/", // Incluir directorio de cabeceras si es necesario
                "${workspaceFolder}/src/*.cpp", // Patrón de archivos fuente
                "${workspaceFolder}/src/presentacion/*.cpp",
                "${workspaceFolder}/src/logica/Controller/*.cpp", // Patrón de archivos fuente
                "${workspaceFolder}/src/logica/Dominio/*.cpp",
                "${workspaceFolder}/src/logica/Dto/*.cpp",
                "-o",
                "${workspaceFolder}/bin/main" // Ruta y nombre del archivo de salida ejecutable
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}